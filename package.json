{
  "name": "tsno",
  "version": "0.0.0",
  "description": "A better way to run scripts written in JavaScript/TypeScript",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "/globals.d.ts"
  ],
  "type": "module",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "bin": {
    "tsno": "./dist/cli.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "npm run build && vitest run",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "devDependencies": {
    "@egoist/prettier-config": "1.0.0",
    "axios": "0.22.0",
    "bundle-require": "2.2.0",
    "execa": "6.0.0",
    "minimost": "1.2.0",
    "node-fetch": "3.1.0",
    "prettier": "2.5.1",
    "string-argv": "0.3.1",
    "strip-ansi": "7.0.1",
    "tinyargs": "0.1.4",
    "tsup": "5.12.9",
    "typescript": "4.5.4",
    "vitest": "0.0.139",
    "zx": "4.2.0"
  },
  "dependencies": {
    "esbuild": "^0.14.10"
  }
}
